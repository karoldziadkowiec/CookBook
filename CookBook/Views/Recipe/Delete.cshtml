@model CookBook.Models.RecipeDTO

@{
    ViewData["Title"] = "delete recipe";
}

<link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />

<h1 class="display-4">Delete recipe</h1>

<h3>Are you sure you want to delete this recipe?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
