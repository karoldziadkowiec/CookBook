@model CookBook.Models.RecipeModel

@{
    ViewData["Title"] = "Details";
}

<h1>Recipe details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ingredients)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ingredients)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.preparation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.preparation)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.recipeId }) |
    <a asp-action="Index">Back to recipes</a>
</div>
