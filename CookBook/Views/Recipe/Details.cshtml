@model CookBook.Models.RecipeDTO

@{
    ViewData["Title"] = "recipe details";
}

<h1 class="display-4">Recipe details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredients)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preparation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preparation)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RecipeID }, new { @class = "btn btn-warning" }) |
    <a class="btn btn-dark" asp-action="Index">Back to recipes</a>
</div>